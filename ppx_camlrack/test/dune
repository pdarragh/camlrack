(executable
 (name pp)
 (modules pp)
 (libraries ppx_camlrack ppxlib))

(rule
 (targets test.actual.ml)
 (deps (:pp pp.exe) (:input test.ml))
 (action (run ./%{pp} --impl %{input} -o %{targets})))

(rule
 (alias runtest)
 (action (diff test.expected.ml test.actual.ml)))

(test
 (name test)
 (modules test)
 (libraries camlrack)
 (preprocess (pps ppx_camlrack)))
